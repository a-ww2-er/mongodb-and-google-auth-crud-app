<h1>Dashboard </h1>
<h4>welcome {{name}} </h4>
<p> Viewing all your running airdrops</p>
{{#if airdrops}}
<table class="striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each airdrops}}
        <tr>
            <td>
                <a href="/airdrops/{{_id}}">{{title}}</a>
            </td>
            <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
            <td><span class="dash-status">{{status}}</span></td>
            <td>
                <a href="/airdrops/edit/{{_id}}" class="btn btn-float">
                <i class="fas fa-edit"></i></a>

                <form action="/airdrops/{{_id}}" method="POST" id="delete-form">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="btn red">
                    <i class="fas fa-trash"></i>
                </button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<p> You dont have any airdrops running</p>
{{/if}}