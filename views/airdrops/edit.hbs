<h3>Edit Airdrops</h3>
<div class="row">
    <form action="/airdrops/{{airdrops._id}}" method="POST" class="col s12">
        <input type="hidden" name="_method" value="PUT">
        <div class="row">
            <div class="input-field">
                <input type="text" id="title" name="title" value="{{airdrops.title}}">
                <label for="title"> Title</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <select name="status" id="status">
                    {{#select airdrops.status}}
                    <option value="public" selected>public</option>
                    <option value="public">private</option>
                    {{/select}}
                </select>
                <label for="status">Status</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Tell Us About This Airdrop:</h5>
                <textarea name="body" id="body" cols="30" rows="10">{{airdrops.body}}</textarea>
            </div>
        </div>

        <div class="row">
            <input type="submit" value="Save" class="btn">
            <a href="/dashboard" class="btn orange"> Cancel</a>
        </div>
    </form>
</div>